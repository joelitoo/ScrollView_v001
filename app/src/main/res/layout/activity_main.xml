<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">




    <HorizontalScrollView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginBottom="100dp"
        android:id="@+id/scrollView"
        android:layout_centerInParent="true"


        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"

            android:weightSum="1">

            <ImageView
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:src="@drawable/criss"
                android:layout_gravity="center_horizontal"
                android:id="@+id/criss"
                android:paddingLeft="15dp"
                />

            <ImageView
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:src="@drawable/conejo"
                android:layout_gravity="center_horizontal"
                android:id="@+id/conejo"
                android:paddingLeft="15dp"/>

            <ImageView
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:src="@drawable/mono"
                android:layout_gravity="center_horizontal"
                android:id="@+id/mono"
                android:paddingLeft="15dp"/>


            <ImageView
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:src="@drawable/jimmboy"
                android:layout_gravity="center_horizontal"
                android:id="@+id/jimboy"
                android:paddingLeft="15dp"/>

            <ImageView
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:src="@drawable/juann"
                android:layout_gravity="center_horizontal"
                android:id="@+id/juan"
                android:paddingLeft="15dp"/>

            <ImageView
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:src="@drawable/keviin"
                android:layout_gravity="center_horizontal"
                android:id="@+id/kevin"
                android:paddingLeft="15dp"/>

            <ImageView
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:src="@drawable/liiam"
                android:layout_gravity="center_horizontal"
                android:id="@+id/liam"
                android:paddingLeft="15dp"/>

            <ImageView
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:src="@drawable/caballo"
                android:id="@+id/caballo"
                android:layout_weight="4.87"
                android:paddingLeft="15dp"/>


        </LinearLayout>

    </HorizontalScrollView>
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:id="@+id/linearLayout">


     </LinearLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/venado"
        android:id="@+id/principal"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Insertar como Wallpaper"
        android:id="@+id/btInsertar"
        android:layout_gravity="bottom"
        android:layout_alignBottom="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/link_text_material_dark"
        android:shadowRadius="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SELECCIONE Y PRESIONE INSERTAR PARA CAMBIAR  EL WALPAPER"
        android:id="@+id/textView"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
